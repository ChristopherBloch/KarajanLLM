{
  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },
  "gateway": {
    "port": 18789,
    "mode": "local",
    "bind": "lan",
    "auth": {
      "mode": "token"
    },
    "trustedProxies": ["0.0.0.0/0", "::0/0"]
  },
  "agents": {
    "defaults": {
      "maxConcurrent": 4,
      "model": {
        "primary": "litellm/qwen-local",
        "fallbacks": ["litellm/kimi-local", "litellm/claude-sonnet"]
      },
      "models": {
        "litellm/qwen-local": { "alias": "Qwen2.5 Local (fast)" },
        "litellm/kimi-local": { "alias": "Kimi K2.5 (smart)" },
        "litellm/claude-sonnet": { "alias": "Claude Sonnet (escalation)" }
      },
      "subagents": {
        "maxConcurrent": 8
      }
    }
  },
  "models": {
    "mode": "merge",
    "providers": {
      "litellm": {
        "baseUrl": "http://litellm:4000/v1",
        "apiKey": "sk-aria-local-key",
        "api": "openai-responses",
        "models": [
          {
            "id": "qwen-local",
            "name": "Qwen2.5 7B Local - Fast orchestrator",
            "reasoning": false,
            "input": ["text"],
            "cost": { "input": 0, "output": 0, "cacheRead": 0, "cacheWrite": 0 },
            "contextWindow": 32768,
            "maxTokens": 8192
          },
          {
            "id": "kimi-local",
            "name": "Moonshot Kimi K2.5 - Smart reasoning",
            "reasoning": true,
            "input": ["text"],
            "cost": { "input": 0.001, "output": 0.002, "cacheRead": 0, "cacheWrite": 0 },
            "contextWindow": 256000,
            "maxTokens": 16384
          },
          {
            "id": "claude-sonnet",
            "name": "Claude Sonnet - Complex tasks & safety",
            "reasoning": true,
            "input": ["text", "image"],
            "cost": { "input": 0.003, "output": 0.015, "cacheRead": 0, "cacheWrite": 0 },
            "contextWindow": 200000,
            "maxTokens": 8192
          }
        ]
      }
    }
  },
  "messages": {
    "ackReactionScope": "group-mentions"
  }
}
