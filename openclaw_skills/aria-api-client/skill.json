{
  "name": "aria-api-client",
  "class": "AriaAPIClient",
  "module": "aria_skills.api_client",
  "description": "Centralized HTTP client for all aria-api interactions. Skills should use this instead of direct database access.",
  "env_requirements": [
    "ARIA_API_URL"
  ],
  "config_schema": {
    "api_url": {
      "type": "string",
      "description": "Base URL for aria-api",
      "default": "http://aria-api:8000/api"
    },
    "timeout": {
      "type": "integer",
      "description": "Request timeout in seconds",
      "default": 30
    }
  },
  "methods": [
    {
      "name": "get_activities",
      "description": "Get recent activities",
      "parameters": {
        "limit": { "type": "integer", "default": 100 }
      }
    },
    {
      "name": "create_activity",
      "description": "Log an activity",
      "parameters": {
        "action": { "type": "string", "required": true },
        "skill": { "type": "string" },
        "details": { "type": "object" },
        "success": { "type": "boolean", "default": true },
        "error_message": { "type": "string" }
      }
    },
    {
      "name": "get_thoughts",
      "description": "Get recent thoughts",
      "parameters": {
        "limit": { "type": "integer", "default": 100 }
      }
    },
    {
      "name": "create_thought",
      "description": "Create a thought",
      "parameters": {
        "content": { "type": "string", "required": true },
        "category": { "type": "string", "default": "general" },
        "metadata": { "type": "object" }
      }
    },
    {
      "name": "get_memories",
      "description": "Get memories",
      "parameters": {
        "limit": { "type": "integer", "default": 100 },
        "category": { "type": "string" }
      }
    },
    {
      "name": "get_memory",
      "description": "Get a specific memory by key",
      "parameters": {
        "key": { "type": "string", "required": true }
      }
    },
    {
      "name": "set_memory",
      "description": "Create or update a memory",
      "parameters": {
        "key": { "type": "string", "required": true },
        "value": { "type": "any", "required": true },
        "category": { "type": "string", "default": "general" }
      }
    },
    {
      "name": "delete_memory",
      "description": "Delete a memory",
      "parameters": {
        "key": { "type": "string", "required": true }
      }
    },
    {
      "name": "get_goals",
      "description": "Get goals",
      "parameters": {
        "limit": { "type": "integer", "default": 100 },
        "status": { "type": "string" }
      }
    },
    {
      "name": "create_goal",
      "description": "Create a goal",
      "parameters": {
        "title": { "type": "string", "required": true },
        "description": { "type": "string" },
        "priority": { "type": "integer", "default": 2 },
        "status": { "type": "string", "default": "pending" },
        "due_date": { "type": "string" },
        "goal_id": { "type": "string" }
      }
    },
    {
      "name": "update_goal",
      "description": "Update a goal",
      "parameters": {
        "goal_id": { "type": "string", "required": true },
        "status": { "type": "string" },
        "progress": { "type": "integer" },
        "priority": { "type": "integer" }
      }
    },
    {
      "name": "delete_goal",
      "description": "Delete a goal",
      "parameters": {
        "goal_id": { "type": "string", "required": true }
      }
    },
    {
      "name": "get_hourly_goals",
      "description": "Get hourly goals",
      "parameters": {
        "status": { "type": "string" }
      }
    },
    {
      "name": "create_hourly_goal",
      "description": "Create an hourly goal",
      "parameters": {
        "hour_slot": { "type": "integer", "required": true },
        "goal_type": { "type": "string", "required": true },
        "description": { "type": "string", "required": true },
        "status": { "type": "string", "default": "pending" }
      }
    },
    {
      "name": "update_hourly_goal",
      "description": "Update an hourly goal status",
      "parameters": {
        "goal_id": { "type": "integer", "required": true },
        "status": { "type": "string", "required": true }
      }
    },
    {
      "name": "get_knowledge_graph",
      "description": "Get full knowledge graph"
    },
    {
      "name": "get_entities",
      "description": "Get knowledge entities",
      "parameters": {
        "limit": { "type": "integer", "default": 100 },
        "entity_type": { "type": "string" }
      }
    },
    {
      "name": "create_entity",
      "description": "Create a knowledge entity",
      "parameters": {
        "name": { "type": "string", "required": true },
        "entity_type": { "type": "string", "required": true },
        "properties": { "type": "object" }
      }
    },
    {
      "name": "create_relation",
      "description": "Create a knowledge relation",
      "parameters": {
        "from_entity": { "type": "string", "required": true },
        "to_entity": { "type": "string", "required": true },
        "relation_type": { "type": "string", "required": true },
        "properties": { "type": "object" }
      }
    },
    {
      "name": "get_social_posts",
      "description": "Get social posts",
      "parameters": {
        "limit": { "type": "integer", "default": 50 },
        "platform": { "type": "string" }
      }
    },
    {
      "name": "create_social_post",
      "description": "Create a social post",
      "parameters": {
        "content": { "type": "string", "required": true },
        "platform": { "type": "string", "default": "moltbook" },
        "visibility": { "type": "string", "default": "public" },
        "post_id": { "type": "string" },
        "reply_to": { "type": "string" },
        "url": { "type": "string" },
        "metadata": { "type": "object" }
      }
    },
    {
      "name": "get_heartbeats",
      "description": "Get heartbeat logs",
      "parameters": {
        "limit": { "type": "integer", "default": 50 }
      }
    },
    {
      "name": "get_latest_heartbeat",
      "description": "Get latest heartbeat"
    },
    {
      "name": "create_heartbeat",
      "description": "Log a heartbeat",
      "parameters": {
        "beat_number": { "type": "integer", "default": 0 },
        "status": { "type": "string", "default": "healthy" },
        "details": { "type": "object" }
      }
    },
    {
      "name": "get_performance_logs",
      "description": "Get performance logs",
      "parameters": {
        "limit": { "type": "integer", "default": 50 }
      }
    },
    {
      "name": "create_performance_log",
      "description": "Create a performance log",
      "parameters": {
        "review_period": { "type": "string", "required": true },
        "successes": { "type": "string" },
        "failures": { "type": "string" },
        "improvements": { "type": "string" }
      }
    },
    {
      "name": "get_tasks",
      "description": "Get pending complex tasks",
      "parameters": {
        "status": { "type": "string" }
      }
    },
    {
      "name": "create_task",
      "description": "Create a pending complex task",
      "parameters": {
        "task_type": { "type": "string", "required": true },
        "description": { "type": "string", "required": true },
        "agent_type": { "type": "string", "required": true },
        "priority": { "type": "string", "default": "medium" },
        "task_id": { "type": "string" }
      }
    },
    {
      "name": "update_task",
      "description": "Update a task status",
      "parameters": {
        "task_id": { "type": "string", "required": true },
        "status": { "type": "string", "required": true },
        "result": { "type": "string" }
      }
    },
    {
      "name": "get_schedule",
      "description": "Get schedule tick status"
    },
    {
      "name": "trigger_schedule_tick",
      "description": "Trigger a manual schedule tick"
    },
    {
      "name": "get_jobs",
      "description": "Get scheduled jobs",
      "parameters": {
        "live": { "type": "boolean", "default": false }
      }
    },
    {
      "name": "sync_jobs",
      "description": "Sync jobs from OpenClaw"
    }
  ]
}
